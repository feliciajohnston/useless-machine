<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.csaper6.uselessmachine.MainActivity"
    android:background="@mipmap/galaxy">

   <Switch
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:id="@+id/switch_useless"
       android:background="#00ffffff"
       android:checked="false"
       android:layout_below="@+id/textView"
       android:layout_centerHorizontal="true" />

   <TextView
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:textAppearance="?android:attr/textAppearanceMedium"
       android:text="Useless Switch"
       android:id="@+id/textView"
       android:background="#00000000"
       android:textColor="#ffffff"
       android:layout_alignParentTop="true"
       android:layout_centerHorizontal="true"
       android:layout_marginTop="97dp" />

   <Button
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:id="@+id/button_destruct"
       android:text="10"
       android:textColor="#000000"
       android:layout_marginBottom="109dp"
       android:layout_alignParentBottom="true"
       android:layout_centerHorizontal="true" />

   <TextView
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:textAppearance="?android:attr/textAppearanceMedium"
       android:text="Self Destruct Button"
       android:id="@+id/textView2"
       android:textColor="#ffffff"
       android:background="#00ffffff"
       android:layout_alignBaseline="@+id/button_destruct"
       android:layout_alignBottom="@+id/button_destruct"
       android:layout_centerHorizontal="true" />

</RelativeLayout>
